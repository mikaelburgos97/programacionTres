{
    "name": "crud-app",
    "version": "1.0.0",
    "description": "Simple CRUD application using React and SQLite",
    "main": "server.js",
    "scripts": {
      "start": "node server.js",
      "client": "cd client && npm start",
      "dev": "concurrently \"npm run start\" \"npm run client\"",
      "setup": "npm install && cd client && npm install"
    },
    "dependencies": {
      "express": "^4.18.2",
      "sqlite3": "^5.1.6",
      "cors": "^2.8.5",
      "body-parser": "^1.20.2"
    },
    "devDependencies": {
      "concurrently": "^8.2.1"
    }
  }